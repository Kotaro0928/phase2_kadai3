<table class="table table-borderless">
  <% comments.each do |comment| %>
  <tr>
    <td>
      <%= link_to user_path(comment.user) do %>
        <%= attachment_image_tag(comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
        <%= comment.user.name %>
      <% end %>
    </td>
    <td>
      <%= comment.comment %>
      <% if comment.user == current_user %>
        <%= link_to 'Destroy', book_comment_path(book), method: :delete, class: "btn btn-sm btn-danger" %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>

<%= form_with(model:[book, comment], local: true) do |f| %>
  <div class="m-3"><%= f.text_area :comment, rows:'5', class: 'form-control' %></div>
  <div class="m-3"><%= f.submit "送信" %></div>
<% end %>
